root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

